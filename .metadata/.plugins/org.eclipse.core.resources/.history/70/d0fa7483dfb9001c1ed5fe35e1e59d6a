package exercicios;

import java.util.Scanner;

public class ExemploSwitchComEntrada {

	public static void main(String[] args) {
		// inteiro opcao = leia()
		
		// Instanciando scanner para possibilitar leitura (Só 1 vez por função)
		Scanner leitor = new Scanner(System.in);
		
		System.out.print("Insira a opção desejada: ");
		int opcao;
		opcao = leitor.nextInt();
		
		// escolha (opcao)
		// 		caso 1:
		switch (opcao) {
			case 1:
				System.out.println("Parabéns! Você selecionou o 1");
				// pare
				break;
			case 2:
				System.out.println("Você selecionou o 2");
				break;
			// caso contrario
			default: 
				System.out.println("Opção inválida. Parando o programa");
				break;
		}
	}
}
