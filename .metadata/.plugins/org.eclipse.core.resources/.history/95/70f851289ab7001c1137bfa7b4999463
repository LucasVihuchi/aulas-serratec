package exercicios;

public class ExercicioVariaveis {

	public static void main(String[] args) {
		int idade = 20;
		double peso = 72.57867278378;
		double altura = 1.83778786;
		String funcionario = "Lucas";
		
		System.out.println("O funcionario " + funcionario + " tem:");
		System.out.print("Idade: " + idade + "\n");
		System.out.printf("Peso: %.1f %s\n", peso, "KG");
		System.out.println("Altura: " + String.format("%.2f", altura) + "\n");
	}

}
